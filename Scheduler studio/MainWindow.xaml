<Window x:Class="Scheduler_studio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler_studio"
        mc:Ignorable="d"
        Title="MainWindow" Height="402.114" Width="849.353">
    <Grid>
        <!-- Test -->
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Background="LightCyan" Height="370">
                <StackPanel x:Name="sidePanel" Orientation="Vertical" Background="Beige" Width="179">
                    <Button x:Name="btnNotes" Content="Muistio" Click="btnNotes_Click"/>
                    <Button x:Name="btnStaff" Content="Henkilökunta" Click="btnStaff_Click"/>
                    <Calendar/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Background="Gray" Width="662">

                        <StackPanel Width="662" Background="LightGray" Orientation="Vertical">
                            <DataGrid x:Name="dgWorkerList" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="335"/>
                        <Button x:Name="btnSaveChanges" Content="Tallenna muutokset" Click="btnSaveChanges_Click" Height="36"/>
                    </StackPanel>

                    <TabControl Visibility="Collapsed" x:Name="tabReservationControl" Height="319" Width="340">
                        <TabItem Header="Kaikki">
                            <ListBox x:Name="lbAll"/>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
